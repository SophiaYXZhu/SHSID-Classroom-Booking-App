.row {
    margin-top: 20px;
    display: grid;
    margin-left: 10px;
    margin-right: 10px;
    border: 1px solid gray;
    border-top-width: 0px;
    border-left-width: 0px;
    border-right-width: 0px;
}

.btn {
    margin-top: 10px;
    margin-left: 10px;
    margin-right: 10px;
}

.btnDelete {
    float: right;
    text-align: center;
    margin-bottom: 5px;
